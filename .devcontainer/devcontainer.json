// See https://aka.ms/vscode-remote/devcontainer.json for format details.
{
    "name": "Etaler in Docker",
    "dockerFile": "Dockerfile",
    "context": "..",
    "extensions": [
        "peterjausovec.vscode-docker",
        "ms-vscode.cpptools",
        "austin.code-gnu-global",
        "vector-of-bool.cmake-tools",
        "twxs.cmake",
        "maddouri.cmake-tools-helper"
    ],
    "runArgs": [ "-e",  "DISPLAY=$DISPLAY" , "-v" ,"/tmp/.X11-unix:/tmp/.X11-unix" , "--cap-add=SYS_PTRACE" ,"--security-opt=seccomp:unconfined", "-v","/var/run/docker.sock:/var/run/docker.sock"]
}
